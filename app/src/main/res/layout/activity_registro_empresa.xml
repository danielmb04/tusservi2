<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/imgEmpresa"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
             />

        <Button
            android:id="@+id/btnSeleccionarImagenEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar imagen"
            android:backgroundTint="@color/AzulAPP"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/etNombre"
            android:hint="Nombre de la Empresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etDescripcion"
            android:hint="Descripción"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="3"
            android:gravity="top|start"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etUbicacion"
            android:hint="Ubicación"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etHorario"
            android:hint="Horario (ej. L-V 9:00-17:00)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etWeb"
            android:hint="Web (opcional)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnAddServicio"
            android:text="Añadir Servicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/AzulAPP"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txtServiciosResumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#444"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnGuardarEmpresa"
            android:text="Guardar Empresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/AzulAPP"
            android:textColor="@color/white"/>
    </LinearLayout>
</ScrollView>
